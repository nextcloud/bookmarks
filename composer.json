{
	"require": {
		"doctrine/inflector": "1.4.*",
		"ext-dom": "*",
		"ext-json": "*",
		"ext-libxml": "*",
		"ext-pdo": "*",
		"guzzlehttp/psr7": "^1",
		"marcelklehr/link-preview": "^3.0.5",
		"pguardiario/phpuri": "1.0.*",
		"psr/http-client": "^1.0",
		"psr/http-factory": "^1.0",
		"psr/http-message": "^1.0",
		"rowbot/url": "^3.0",
		"symfony/console": "^4.4",
		"symfony/event-dispatcher": "^4.4",
		"symfony/process": "^4.4",
		"symfony/routing": "^4.4",
		"xantios/mimey": "^2.1",
		"andreskrey/readability.php": "^2.1"
	},
	"require-dev": {
		"phpunit/phpunit": "^8.5",
		"nextcloud/coding-standard": "^0.5.0",
		"vimeo/psalm": "^4",
		"christophwurst/nextcloud": "v21.0.0"
	},
	"config": {
		"optimize-autoloader": true,
		"classmap-authoritative": true
	},
	"autoload": {
		"psr-4": {
			"OCA\\Bookmarks\\": "lib/"
		}
	},
	"scripts": {
		"lint": "find . -name \\*.php -not -path './vendor/*' -print0 | xargs -0 -n1 php -l",
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix",
		"psalm": "psalm  --output-format=github --no-progress --no-cache --use-baseline=psalm-baseline.xml",
		"psalm-ui": "psalm --no-cache"
	}
}
